<Defs>
	<RecipeDef Name="MF_Craft_Module_Base" Abstract="True">
		<jobString>Crafting</jobString>
		<effectWorking>Repair</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
		<recipeUsers>
			<li>TableMachining</li>
		</recipeUsers>
	</RecipeDef>
	
	<HediffDef Name="MF_MechanoidModification_Base" Abstract="True">
		<hediffClass>MechanoidFoundry.Hediff_MechanoidModification</hediffClass>
	</HediffDef>
  
	<RecipeDef ParentName="MF_Craft_Module_Base">
		<defName>MF_Craft_HaulingModule</defName>
		<label>craft hauling module</label>
		<description>Craft a hauling module</description>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Plasteel</li>
					</thingDefs>
				</filter>
				<count>30</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentSpacer</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Plasteel</li>
				<li>ComponentSpacer</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<MF_HaulingModule>1</MF_HaulingModule>
		</products>
		<skillRequirements>
			<Crafting>8</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
	</RecipeDef>
	
	<RecipeDef>
		<defName>MF_InstallHaulingModule</defName>
		<label>install hauling module</label>
		<description>Install a hauling module.</description>
		<workerClass>MechanoidFoundry.RecipeModifyMechanoid</workerClass>
		<jobString>Installing hauling module.</jobString>
		<workAmount>5000</workAmount>
		<skillRequirements>
			<Crafting>5</Crafting>
			<Intellectual>5</Intellectual>
		</skillRequirements>
		<workSkill>Intellectual</workSkill>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>MF_HaulingModule</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<targetsBodyPart>false</targetsBodyPart>
		<addsHediff>MF_HaulingModule</addsHediff>
		<modExtensions>
			<li Class="MechanoidFoundry.RecipeInstallOnHackableMechanoid"></li>
		</modExtensions>
	</RecipeDef>
	
	<ThingDef ParentName="BodyPartBase">
		<defName>MF_HaulingModule</defName>
		<label>hauling module</label>
		<description>Can be installed in a mechanoid to make it capable of hauling.</description>
		<soundInteract>Metal_Drop</soundInteract>
		<soundDrop>Standard_Drop</soundDrop>
		<stackLimit>1</stackLimit>
		<graphicData>
			<texPath>Things/Item/Health/HealthItem</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>0.80</drawSize>
			<color>(189,169,118)</color>
		</graphicData>
		<statBases>
			<WorkToMake>7000</WorkToMake>
			<MaxHitPoints>70</MaxHitPoints>
			<Mass>0.6</Mass>
			<Flammability>1.0</Flammability>
			<DeteriorationRate>2.0</DeteriorationRate>
			<SellPriceFactor>0.70</SellPriceFactor>
		</statBases>
		<intricate>true</intricate>
		<thingCategories>
			<li>Manufactured</li>
		</thingCategories>
	</ThingDef>
	
	<HediffDef ParentName="MF_MechanoidModification_Base">
		<defName>MF_HaulingModule</defName>
		<label>hauling module</label>
		<description>hauling module</description>
		<defaultLabelColor>(0.5, 0.5, 0.9)</defaultLabelColor>
		<isBad>false</isBad>
		<modExtensions>
			<li Class="MechanoidFoundry.HediffExtension">
				<workTypes>
					<li>Hauling</li>
				</workTypes>
				<skillLevel>10</skillLevel>
			</li>
		</modExtensions>
	</HediffDef>
</Defs>
